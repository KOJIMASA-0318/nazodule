<div class ="top-wrapper">
  <div class="row">
    <div class="column fifty-left col-md-6 text-center">
        <h2 class ="top-title">Top画像</h2>
    </div>
    <div class="column fifty-right col-md-6 text-center">
      <h2 class ="top-title">謎Dule 新規登録</h2>
      <div class="text-center">
          <%= form_for @user do |f| %>
          <div class="input-form">
            <div class="form-group">
            <%= f.label :name, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
            <%= f.label :email, class: 'text-white' %>
            <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
            <%= f.label :password, class: 'text-white' %>
            <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group">
            <%= f.label :password_confirmation, class: 'text-white' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>
          <%= f.submit "新規登録", class: 'btn btn-outline-primary' %>
          <% end %>
      </div>

    </div>
  </div>
</div>
